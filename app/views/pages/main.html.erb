
<!--
       Home Slider
       ==================================== -->

<section id="home-slider">
  <div id="slider" class="sl-slider-wrapper">

    <div class="sl-slider">

      <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="-25" data-slice2-rotation="-25" data-slice1-scale="2" data-slice2-scale="2">

        <div class="bg-img bg-img-1"></div>

        <div class="slide-caption">
          <div class="caption-content" >
            <div style="background-color: rgba(0,0,0,.4);padding-bottom: 15px">
              <h2 class="animated fadeInDown" >Nuevo Portal: Salas UC</h2>
              <span class="animated fadeInDown">Creado directamente desde Ingeniería UC</span>
            </div>
          </div>
        </div>

      </div>
      <% if not user_signed_in? %>
      <div class="sl-slide" data-orientation="vertical" data-slice1-rotation="10" data-slice2-rotation="-15" data-slice1-scale="1.5" data-slice2-scale="1.5">

        <div class="bg-img bg-img-2"></div>
        <div class="slide-caption">
          <div class="caption-content">
            <div style="background-color: rgba(0,0,0,.4);padding-bottom: 15px">
              <h2>¿Eres Profesor o Administrador?</h2>
              <span>Crea tu cuenta e identificate para obtener acceso a utiles herramientas</span>
              <br><br>
              <%= link_to('Autenticarse', new_user_session_path, :class => "btn btn-blue btn-effect") %>
              <%= link_to('Registrarse', new_user_registration_path, :class => "btn btn-red btn-effect") %>

            </div>
          </div>
        </div>

      </div>
      <% end %>

      <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="3" data-slice2-rotation="3" data-slice1-scale="2" data-slice2-scale="1">

        <div class="bg-img bg-img-3"></div>
        <div class="slide-caption">
          <div class="caption-content">
            <div style="background-color: rgba(0,0,0,.4);padding-bottom: 15px">
              <h2>¿Eres Alumno?</h2>
              <span>La sección Servicios puede serte de gran ayuda</span>
            </div>
          </div>
        </div>

      </div>

    </div><!-- /sl-slider -->

