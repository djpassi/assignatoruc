<% provide(:title,"Consultas") %>
<div class="text-center">
<h1>
	Sala de un Curso
</h1>
<%= form_tag("/consultas/sala/curso", method: "get") do %>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-2 text-right">
  <%= label_tag(:course, "Curso") %>
            </div>
          <div class="col-xs-10">
  <%= select_tag(:course,
  	options_for_select(@courses), :class => "form-control"
  ) %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-2 text-left">
          <%= submit_tag("Buscar", :class => "btn btn-primary") %>
        </div>
      </div>
<% end %>
  <hr>
<h1>
	Curso en una Sala y Horario Especifico
</h1>
		<%= form_tag("/consultas/curso/sala", method: "get") do %>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-2 text-right">
				<%= label_tag(:classroom, "Sala") %>
            </div>
          <div class="col-xs-10">
				<%= select_tag(:classroom,
											 options_for_select(@classrooms), :class => "form-control"
						) %>
            </div>
          </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-2 text-right">
    <%= label_tag(:day, "Día") %>
          </div>
          <div class="col-xs-10">
    <%= select_tag(:day,
                   options_for_select([
                                          ["Lunes","L"],
                                          ["Martes", "M"],
                                          ["Miercoles", "W"],
                                          ["Jueves", "J"],
                                          ["Viernes", "V"],
                                          ["Sabado", "S"]
                                      ]), :class => "form-control"
        ) %>
            </div>
        </div>
    </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-2 text-right">
    <%= label_tag(:module, "Módulo") %>
            </div>
          <div class="col-xs-10">
    <%= select_tag(:module, options_for_select([1,2,3,4,5,6,7,8]), :class => "form-control") %>
            </div>
          </div>
    </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-2 text-left">
          <%= submit_tag("Buscar", :class => "btn btn-primary") %>
        </div>
      </div>
<% end %>
  <hr>
    <h1>
    Información de una Sala    </h1>
    <%= form_tag("/salas/informacion", method: "get") do %>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-2 text-right">
        <%= label_tag(:course, "Curso") %>
            </div>
          <div class="col-xs-10">
        <%= select_tag(:course,
                       options_for_select(@courses_info), :class => "form-control"
            ) %>
            </div>
          </div>
        </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-2 text-left">
          <%= submit_tag("Buscar", :class => "btn btn-primary") %>
        </div>
      </div>
    <% end %>
  <br><br>
</div>

